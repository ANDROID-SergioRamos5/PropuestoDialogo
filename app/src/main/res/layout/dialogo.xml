<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/dialogo">

    <TextView
        android:id="@+id/tV_arriba"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margenDialogo"
        android:gravity="center_horizontal"
        android:text="@string/tV_parteA"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="73dp" />

    <Button
        android:id="@+id/crearCuenta"
        android:layout_width="332dp"
        android:layout_height="70dp"
        android:layout_below="@id/tV_arriba"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/margenDialogo"
        android:background="@color/colorAccent"
        android:ems="@android:integer/config_longAnimTime"
        android:padding="@dimen/paddingDialog"
        android:text="@string/botonCrear"
        tools:layout_editor_absoluteX="39dp"
        tools:layout_editor_absoluteY="162dp" />

    <View
        android:id="@+id/view"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/margenDialogo"
        android:background="@android:color/black"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="271dp" />


    <EditText
        android:id="@+id/eT_nombre"
        android:layout_width="380dp"
        android:layout_height="73dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/style_borde"
        android:hint="@string/nombre"
        android:inputType="textPersonName"
        android:padding="@dimen/paddingDialog"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view" />

    <EditText
        android:id="@+id/eT_contraseña"
        android:layout_width="380dp"
        android:layout_height="73dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/style_borde"
        android:hint="@string/contraseña"
        android:inputType="textPassword"
        android:padding="@dimen/paddingDialog"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/eT_nombre" />

    <CheckBox
        android:id="@+id/checkBoxRecordar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/eT_contraseña"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:hint="@string/checkBox"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/eT_contraseña" />

    <TextView
        android:id="@+id/tV_olvidadaContraseña"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/checkBoxRecordar"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_margin="@dimen/margenDialogo"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:text="@string/olvidarContraseña"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/checkBoxRecordar" />

    <Button
        android:id="@+id/boton_iniciar"
        android:layout_width="347dp"
        android:layout_height="69dp"
        android:layout_below="@id/tV_olvidadaContraseña"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/margenDialogo"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:background="@color/colorAccent"
        android:ems="@android:integer/config_longAnimTime"
        android:padding="@dimen/paddingDialog"
        android:text="@string/botonIniciar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tV_olvidadaContraseña" />

</androidx.constraintlayout.widget.ConstraintLayout>